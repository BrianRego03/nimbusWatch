generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id Int @id @default(autoincrement())
  username String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  windows windows[]
}

enum Role {
  USER 
  ADMIN
  GUEST
}

model windows{
  id Int @id @default(autoincrement())
  startWindowDay Day 
  startWindowHour Int
  startWindowMin Int
  startWindowMeridian Meridian
  endWindowDay Day
  endWindowHour Int
  endWindowMin Int
  endWindowMeridian Meridian

  userId Int
  user user @relation(fields: [userId],references: [id],onDelete: Cascade)
  @@index([userId])
}

enum Day {
  Sunday 
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Sarturday
}

enum Meridian {
  AM 
  PM
}



