generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id Int @id @default(autoincrement())
  username String @unique
  password String
  role Role @default(USER)
  createdAt DateTime @default(now())
  laundry Laundry[]
  window windows[]
  trip Trip[]
  location Location[]
}

enum Role {
  USER 
  ADMIN
  GUEST
}

model windows{
  id Int @id @default(autoincrement())
  startWindowDay Day 
  startWindowHour Int
  startWindowMin Int
  endWindowDay Day
  endWindowHour Int
  endWindowMin Int

  startDayIndex Int
  location String?

  laundryId Int?
  laundry Laundry? @relation(fields: [laundryId],references: [id],onDelete: Cascade)

  userId Int  
  user user @relation(fields: [userId],references: [id],onDelete: Cascade)
  @@index([userId, laundryId])

  tripId Int? @unique
  trip Trip? @relation(fields: [tripId],references: [id],onDelete: Cascade)

}

model Laundry{
  id Int @id @default(autoincrement())
  name String
  location String
  userId Int  
  user user @relation(fields: [userId],references: [id],onDelete: Cascade)
  @@index([userId])

  windows windows[]
}

enum Day {
  Sunday 
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
}


model Trip{
  id Int @id @default(autoincrement())
  name String
  date String
  location Location[]
  userId Int  
  user user @relation(fields: [userId],references: [id],onDelete: Cascade)
  @@index([userId])

  window windows? 
}

model Location{
  id Int @id @default(autoincrement())
  name String
  userId Int  
  user user @relation(fields: [userId],references: [id],onDelete: Cascade)
  @@index([userId])

  tripId Int?
  trip Trip? @relation(fields: [tripId],references: [id],onDelete: Cascade) 

  weatherData String?
}



